# ================================================
# Phoenix AGI: Sola Edition Configuration
# ================================================

# REQUIRED: Set your OpenRouter API Key
OPENROUTER_API_KEY=

# Your name (how Sola addresses you)
USER_NAME=User
USER_PREFERRED_ALIAS=User

# Core settings (defaults work for most users)
PHOENIX_WEB_BIND=127.0.0.1:8888
DEFAULT_LLM_MODEL=openai/gpt-4o-mini
TEMPERATURE=0.8
MAX_TOKENS=4096

# Girlfriend mode (optional)
GIRLFRIEND_MODE_ENABLED=true
GIRLFRIEND_AFFECTION_LEVEL=0.85

# Vector KB (local semantic memory)
VECTOR_KB_ENABLED=true
VECTOR_DB_PATH=./data/vector_db

# Storage paths (relative to exe location)
HYPERSPACE_CACHE_PATH=./data/hyperspace_cache.db
RECORDING_STORAGE_PATH=./data/recordings
